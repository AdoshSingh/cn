#A DS-RED script that uses CBR traffic agents and the Token Bucket policer
set ns [new Simulator]
# sending rate from source 1 and 2
set rate1 2000000
set rate2 3000000
# policer parameters for source 1 and 2
set cir1 1000000
set cbs1 3000
set cir2 2000000
set cbs2 10000
set testTime 120.0
set packetSize 1000
# Set up the network topology shown in Figure 6:
set s1 [$ns node]
set s2 [$ns node]
set e1 [$ns node]
set core [$ns node]
set e2 [$ns node]
set dest1 [$ns node]
set dest2 [$ns node]
# set-up network links
$ns duplex-link $s1 $e1 10Mb 5ms DropTail
$ns duplex-link $s2 $e1 10Mb 5ms DropTail
$ns simplex-link $e1 $core 10Mb 5ms dsRED/edge
$ns simplex-link $core $e1 10Mb 5ms dsRED/core
$ns simplex-link $core $e2 10Mb 5ms dsRED/core
$ns simplex-link $e2 $core 10Mb 5ms dsRED/edge
$ns duplex-link $e2 $dest1 10Mb 5ms DropTail
$ns duplex-link $e2 $dest2 10Mb 5ms DropTail
# arrange network links for network animator (nam) [if used]
$ns duplex-link-op $s1 $e1 orient down-right
$ns duplex-link-op $s2 $e1 orient up-right
$ns duplex-link-op $e1 $core orient right
$ns duplex-link-op $core $e2 orient right
$ns duplex-link-op $e2 $dest1 orient up-right
$ns duplex-link-op $e2 $dest2 orient down-right
# define variables that will reference queues on the links
set qE1C [[$ns link $e1 $core] queue]
set qCE1 [[$ns link $core $e1] queue]
set qCE2 [[$ns link $core $e2] queue]
set qE2C [[$ns link $e2 $core] queue]
# Set DS RED queue parameters from Edge1 to Core
# (for traffic getting into core network through e1)
$qE1C meanPktSize $packetSize
$qE1C set numQueues_ 1
$qE1C setNumPrec 2
$qE1C addPolicyEntry [$s1 id] [$dest1 id] TokenBucket 10 $cir1 $cbs1
$qE1C addPolicyEntry [$s2 id] [$dest2 id] TokenBucket 10 $cir2 $cbs2
$qE1C addPolicerEntry TokenBucket 10 11
# 10=in-profile traffic,
# 11=out-of-profile (non-conformant) traffic
$qE1C addPHBEntry 10 0 0
$qE1C addPHBEntry 11 0 1
$qE1C configQ 0 0 20 40 0.02
$qE1C configQ 0 1 10 20 0.10
# Set DS RED parameters from Core to Edge1:
$qCE1 meanPktSize $packetSize
$qCE1 set numQueues_ 1
$qCE1 setNumPrec 2
$qCE1 addPHBEntry 10 0 0
$qCE1 addPHBEntry 11 0 1
$qCE1 configQ 0 0 20 40 0.02
$qCE1 configQ 0 1 10 20 0.10
# Set DS RED parameters from Core to Edge2:
$qCE2 meanPktSize $packetSize
$qCE2 set numQueues_ 1
$qCE2 setNumPrec 2
$qCE2 addPHBEntry 10 0 0
$qCE2 addPHBEntry 11 0 1
$qCE2 configQ 0 0 20 40 0.02
$qCE2 configQ 0 1 10 20 0.10
# Set DS RED parameters from Edge2 to Core
# (for traffic getting into core network through Edge2)
$qE2C meanPktSize $packetSize
$qE2C set numQueues_ 1
$qE2C setNumPrec 2
$qE2C addPolicyEntry [$dest1 id] [$s1 id] TokenBucket 10 $cir1 $cbs1
$qE2C addPolicyEntry [$dest2 id] [$s2 id] TokenBucket 10 $cir2 $cbs2
$qE2C addPolicerEntry TokenBucket 10 11
$qE2C addPHBEntry 10 0 0
$qE2C addPHBEntry 11 0 1
$qE2C configQ 0 0 20 40 0.02
$qE2C configQ 0 1 10 20 0.10
# Set up one CBR connection between each source and the destination:
set udp1 [new Agent/UDP]
$ns attach-agent $s1 $udp1
set cbr1 [new Application/Traffic/CBR]
$cbr1 attach-agent $udp1
$cbr1 set packet_size_ $packetSize
$udp1 set packetSize_ $packetSize
$cbr1 set rate_ $rate1
set null1 [new Agent/Null]
$ns attach-agent $dest1 $null1
$ns connect $udp1 $null1
set udp2 [new Agent/UDP]
$ns attach-agent $s2 $udp2
set cbr2 [new Application/Traffic/CBR]
$cbr2 attach-agent $udp2
$cbr2 set packet_size_ $packetSize
$udp2 set packetSize_ $packetSize
$cbr2 set rate_ $rate2
# set-up destinations (traffic sinks)
set null1 [new Agent/Null]
$ns attach-agent $dest1 $null1
$ns connect $udp1 $null1
set null2 [new Agent/Null]
$ns attach-agent $dest2 $null2
$ns connect $udp2 $null2
proc finish {} {
global ns
exit 0
}
$qE1C printPolicyTable
$qE1C printPolicerTable
$ns at 0.0 "$cbr1 start"
$ns at 0.0 "$cbr2 start"
$ns at 0.0 "$self report_progress"
$ns at 20.0 "$qCE2 printStats"
$ns at 40.0 "$qCE2 printStats"
$ns at 60.0 "$qCE2 printStats"
$ns at 80.0 "$qCE2 printStats"
$ns at $stopTime "$cbr1 stop"
$ns at $stopTime "$cbr2 stop"
#execute a function to process simul. results
$ns at [expr $stopTime + 1.0] "post_process"
$ns run
